<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <!-- 去除自动注释 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--  数据库配置  -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/project_crowd?characterEncoding=utf8&amp;useSSL=false&amp;serverTimezone=UTC&amp;rewriteBatchedStatements=true"
                        userId="root"
                        password="362343">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--    指定javabean生成的位置    -->
        <javaModelGenerator targetPackage="com.raise.crowd.entity"
                            targetProject="D:\java\workspaceIDEA\raise_net_object\crowdfunding01-admin-parent\crowdfunding04-admin-entity\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--    指定sql映射文件生成的位置    -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="D:\java\workspaceIDEA\raise_net_object\crowdfunding01-admin-parent\crowdfunding02-admin-webui\src\main\resources\mybatis">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--    指定dao接口生成的位置,mapper接口    -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.raise.crowd.mapper"
                             targetProject="D:\java\workspaceIDEA\raise_net_object\crowdfunding01-admin-parent\crowdfunding03-admin-component\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--    指定每个表的生成策略   -->
        <table tableName="t_auth" domainObjectName="Auth"></table>

    </context>
</generatorConfiguration>